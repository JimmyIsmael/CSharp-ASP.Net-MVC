@model IEnumerable<CigarStoreProject.Models.ProductModel>

@{
    ViewBag.Title = "List of Products";
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="row">
                <div class="col-md-6 col-sm-6 col-xs-6">
                    <h2>List of Products</h2>
                </div>
                <div class="col-md-6 col-sm-6 col-xs-6">
                    <div class="col-md-offset-10 col-md-2">
                        <input type="button" onclick="location.href='@Url.Action("AddProduct", "Product")'" value="Add New" class="btn primary-btn" />
                    </div>
                </div>
                </div>
                <br />
                <div class="row">
                    <div class="col-md-12 table-responsive">
                        <table class="table table-hover">
                            <tr>
                                <th>
                                    Product Image
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.ProductCode)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Description)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.UnitOfMeasure)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Category)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Price)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.IsActive)
                                </th>
                                <th>
                                    Options
                                </th>
                            </tr>

                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <img src="@Url.Content(item.ImagePath)" height="100" width="100">
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ProductCode)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Description)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.UnitOfMeasure)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Category)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Price)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.IsActive)
                                    </td>
                                    <td>
                                        @Html.ActionLink("Edit", "EditProduct", new { id = item.Id }) |
                                        @Html.ActionLink("Details", "ProductDetail", new { id = item.Id })
                                    </td>
                                </tr>
                            }
                        </table>
                    </div>
                </div>
            </div>
    </div>
</div>


