<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->

    <title>@ViewBag.Title - My ASP.NET Application</title>

    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,500,700" rel="stylesheet">

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <!-- HEADER -->
    <header>
        <!-- TOP HEADER -->
        <div id="top-header" class="hidden-xs">
            <div class="container">
                <ul class="header-links pull-left">
                    <li><a href="#"><i class="fa fa-phone"></i> (904) 353-4311</a></li>
                    <li><a href="#"><i class="fa fa-envelope-o"></i> support@swisher.com</a></li>
                    <li><a href="#"><i class="fa fa-map-marker"></i> 459 E 16th St, Jacksonville, FL 32206</a></li>
                </ul>
                <ul class="header-links pull-right">
                    <li><a href="#"><i class="fa fa-user-o"></i>Hi @ViewBag.userName</a> </li>
                    <li><a href="#"><i class="fa fa-cog"></i> My Account</a></li>
                    @if (ViewBag.logged == true)
                    {
                        <li><i class="fa fa-sign-out"></i> @Html.ActionLink("Log out", "Logout", "Login")</li>
                    }
                </ul>
            </div>
        </div>
        <!-- /TOP HEADER -->
        <!-- MAIN HEADER -->
        <div id="header">
            <!-- container -->
            <div class="container">
                <!-- row -->
                <div class="row">
                    <!-- LOGO -->
                    <div class="col-md-3">
                        <div class="header-logo">
                            <a href="#" class="logo">
                                <img src="~/Images/Swisher-Shield.png" alt="" width="130" height="70">
                            </a>
                        </div>
                    </div>
                    <!-- /LOGO -->
                    <!-- SEARCH BAR -->
