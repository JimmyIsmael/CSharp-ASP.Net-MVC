                                @Html.AntiForgeryToken()
                                <input class="input" placeholder="Search here" name="SearchValue">
                                <button class="search-btn">Search</button>
                            }
                        </div>
                    </div>*@
                    <!-- /SEARCH BAR -->
                    <!-- ACCOUNT -->
                    <div class="col-md-3 clearfix">
                        <div class="header-ctn">
                            <!-- Cart -->
                            @*<div class="dropdown">
                                <a class="dropdown-toggle" data-toggle="dropdown" aria-expanded="true">
                                    <i class="fa fa-shopping-cart"></i>
                                    <span>Your Cart</span>
                                    <div class="qty">@Model.CartProducts.Count</div>
                                </a>
                                <div class="cart-dropdown">
                                    
                                        @foreach (var item in Model.CartProducts)
                                        {
                                            <div class="product-widget">
                                                <div class="product-img">
                                                    <img src="@Url.Content(item.ProductImagePath)" alt="">
                                                </div>
                                                <div class="product-body">
                                                    <h3 class="product-name">@Html.ActionLink(item.ProductDescription, "ShowProduct", new { productId = item.ProductId })</h3>
                                                    <h4 class="product-price"><span class="qty">@Html.DisplayFor(modelItem => item.ProductQty)</span>x $@Html.DisplayFor(modelItem => item.ProductPrice)</h4>
                                                </div>
                                                <button class="delete" onclick="location.href='@Url.Action("DeleteProductFromCart", "Store", new { productId = item.ProductId })'"><i class="fa fa-close"></i></button>
                                            </div>
                                        }

                                    <div class="cart-summary">
                                        <small>@Model.CartProducts.Count Item(s) selected</small>
                                        <h5>SUBTOTAL: $@string.Format("{0:0,0.00}", @ViewBag.Total)</h5>
                                    </div>
                                    <div class="cart-btns">
                                        @Html.ActionLink("View Cart", "ViewCart")
                                        @Html.ActionLink("Checkout", "Checkout")
                                    </div>
                                </div>
                            </div>*@
                            <!-- /Cart -->
                            <!-- Admin Options -->
                            @*@if (ViewBag.isAdmin == true)
                            {
                                <div class="dropdown">
                                    <a class="dropdown-toggle" data-toggle="dropdown" aria-expanded="true">
                                        <i class="fa fa-cog"></i>
                                        <span>Administrators</span>
                                    </a>
                                    <div class="cart-dropdown">
                                        <div class="cart-list">
                                            <div class="product-body">
                                                <h5 class="product-name">@Html.ActionLink("Users", "ViewUsers", "SignUp")</h5>
                                                <h5 class="product-name">@Html.ActionLink("Products", "ListProducts", "Product")</h5>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }*@

